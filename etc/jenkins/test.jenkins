pipeline {
  agent any

  environment {
    NVM_DIR = "${WORKSPACE}/.nvm"
    WORKSPACE_DIR = 'WingWords'
  }

  stages {
    stage('Install Node') {
      steps {
        sh '''
          mkdir -p "$NVM_DIR"
          curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
          export NVM_DIR="$NVM_DIR"
          [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
          nvm install 18

          echo '#!/bin/bash' > with-node.sh
          echo 'export NVM_DIR="$NVM_DIR"' >> with-node.sh
          echo '[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"' >> with-node.sh
          echo 'nvm use 18' >> with-node.sh
          echo '"$@"' >> with-node.sh
          chmod +x with-node.sh
        '''
      }
    }

    stage('Install Dependencies') {
      steps {
        sh './with-node.sh npm install'
      }
    }

    stage('Run Linter') {
      steps {
        sh './with-node.sh npm run lint'
      }
    }

    stage('Build Project') {
      steps {
        sh './with-node.sh npm run build'
      }
    }
  }
}
