pipeline {
  agent any

  environment {
    WORKSPACE_DIR = 'WingWords'
  }

  stages {
    stage('Install Node') {
        steps {
            sh '''
                export NVM_DIR="$WORKSPACE/$WORKSPACE_DIR/.nvm"
                mkdir -p "$NVM_DIR"
                curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.39.7/install.sh | bash
                [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
                nvm install 18

                echo '#!/bin/bash' > $WORKSPACE_DIR/with-node.sh
                echo 'export NVM_DIR="$WORKSPACE/'$WORKSPACE_DIR'/.nvm"' >> $WORKSPACE_DIR/with-node.sh
                echo '[ -s "$NVM_DIR/nvm.sh" ] && source "$NVM_DIR/nvm.sh"' >> $WORKSPACE_DIR/with-node.sh
                echo 'nvm use 18' >> $WORKSPACE_DIR/with-node.sh
                echo '"$@"' >> $WORKSPACE_DIR/with-node.sh
                chmod +x $WORKSPACE_DIR/with-node.sh
            '''
        }
    }

    stage('Install Dependencies') {
      steps {
        dir(WORKSPACE_DIR) {
          sh './with-node.sh npm install'
        }
      }
    }

    stage('Run Tests') {
      steps {
        dir(WORKSPACE_DIR) {
          sh './with-node.sh npm run test'
        }
      }
    }
  }
}
